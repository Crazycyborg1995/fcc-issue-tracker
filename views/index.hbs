<div class="container my-4">
  <div class="alert alert-dismissible alert-info">
    <h5>
      To get all the issues,&nbsp;
      <a href="/project" class="alert-link">click here</a>
    </h5>
    <h5>You can pass queries to search issues. e.g, /api/issues?title=new</h5>

  </div>
  <div class="card border-primary my-5">
    <div class="card-header">POST ISSUE</div>
    <div class="card-body">
      <form id="post">
        <div class="form-group">
          <input type="text" name="title" class="form-control" id="title" placeholder="Issue Title">
        </div>
        <div class="form-group">
          <textarea name="text" id="text" placeholder="Text"></textarea>
        </div>
        <div class="form-group">
          <input type="text" name="creator" class="form-control" id="creator" placeholder="Created By">
        </div>
        <div class="form-group">
          <input type="text" name="assigned" class="form-control" id="assigned" placeholder="(optional) Assigned to">
        </div>
        <div class="form-group">
          <input type="text" name="status" class="form-control" id="status" placeholder="(optional) Status Text">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
  <div class="card border-primary my-5">
    <div class="card-header">UPDATE ISSUE</div>
    <div class="card-body">
      <form id="update">
        <div class="form-group">
          <input type="text" name="id" class="form-control" id="id" placeholder="_id">
        </div>
        <div class="form-group">
          <input type="text" name="title" class="form-control" id="title2" placeholder="(optional) Issue Title">
        </div>
        <div class="form-group">
          <textarea name="text" id="text2" placeholder="(optional) Text"></textarea>
        </div>
        <div class="form-group">
          <input type="text" name="creator" class="form-control" id="creator2" placeholder="(optional) Created By">
        </div>
        <div class="form-group">
          <input type="text" name="assigned" class="form-control" id="assigned2" placeholder="(optional) Assigned to">
        </div>
        <div class="form-group">
          <input type="text" name="status" class="form-control" id="status2" placeholder="(optional) Status Text">
        </div>
        <div class="form-check">
          <input type="checkbox" class="custom-control-input" id="open" name="open">
          <label class="custom-control-label text-muted" for="open">Check to close issue</label>
        </div>
        <button type="submit" class="btn btn-primary mt-2">Update</button>
      </form>
    </div>
  </div>
  <div class="card border-primary my-5">
    <div class="card-header">DELETE ISSUE</div>
    <div class="card-body">
      <form id="delete">
        <div class="form-group">
          <input type="text" name="id2" class="form-control" id="id2" placeholder="_id">
        </div>
        <button type="submit" class="btn btn-primary">Delete</button>
      </form>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="myModal">
  <!-- Modal content -->
  <div class="modal-content">
    <span class="close">&times;</span>
    <div class="output"></div>
  </div>
</div>